{
  "name": "@ankhdt/loom-cli",
  "version": "0.2.0",
  "description": "Command line interface for the Loom Engine",
  "type": "module",
  "exports": {
    "types": "./src/index.ts",
    "default": "./src/index.ts"
  },
  "bin": {
    "loom": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "npx tsx src/cli.ts",
    "dev": "node --watch src/cli.ts",
    "test": "node --test src/**/*.test.ts",
    "build": "rm -rf dist && node esbuild.config.js && chmod +x dist/cli.js",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ankhdt/loom-engine.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "cli",
    "llm",
    "language-model",
    "conversation",
    "branching"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ankhdt/loom-engine": "workspace:*",
    "@iarna/toml": "^2.2.5",
    "@types/react": "^18.0.0",
    "chalk": "^5.3.0",
    "ink": "^5.2.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^9.2.15",
    "react": "^18.0.0",
    "react-devtools-core": "^4.28.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.14.0",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.25.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
